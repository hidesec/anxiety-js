# ================================
# ANXIETY-JS FRAMEWORK CONFIGURATION
# ================================

# ================================
# APPLICATION SETTINGS
# ================================
APP_NAME=Anxiety Framework
APP_VERSION=1.0.0
APP_DEBUG=true
NODE_ENV=development
PORT=3001
HOST=localhost
GLOBAL_PREFIX=/api

# ================================
# SERVER CONFIGURATION
# ================================
# Enable/disable CORS
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Body parser settings
BODY_PARSER_ENABLED=true
BODY_PARSER_LIMIT=10mb
BODY_PARSER_EXTENDED=true

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_LEVEL=info
LOG_FORMAT=simple

# File Logging
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs
LOG_FILE_MAX_FILES=5
LOG_FILE_MAX_SIZE=10m

# Console Logging
LOG_CONSOLE_ENABLED=true
LOG_CONSOLE_COLORIZE=true

# Legacy settings
LOG_ENABLED=true
LOG_TIMESTAMPS=true
SUPPRESS_LOGS_IN_TEST=true

# ================================
# SECURITY CONFIGURATION
# ================================
# JWT Settings
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_ALGORITHM=HS256
JWT_ISSUER=anxiety-framework
JWT_AUDIENCE=anxiety-framework-users

# Bcrypt Settings
BCRYPT_SALT_ROUNDS=10

# CORS Settings
CORS_ORIGIN=*
CORS_CREDENTIALS=true
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# API Security
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Security Headers (Helmet)
HELMET_ENABLED=true

# ================================
# DATABASE CONFIGURATION
# ================================
# PostgreSQL Database Settings
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=anxiety_db
DB_SYNCHRONIZE=false
DB_LOGGING=false

# Database Entity and Migration Paths
DB_ENTITIES=src/**/*.entity{.ts,.js}
DB_MIGRATIONS=src/migrations/*{.ts,.js}
DB_ENTITIES_DIR=src/entities
DB_MIGRATIONS_DIR=src/migrations

# Connection Pool Settings
DB_POOL_SIZE=10
DB_TIMEOUT=30000
DB_SSL=false

# ================================
# CACHE CONFIGURATION
# ================================
# Cache Settings
CACHE_TTL=300
CACHE_MAX=100
CACHE_STORE=memory

# Redis Settings (when CACHE_STORE=redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ================================
# API CONFIGURATION
# ================================
# API versioning
API_VERSION=v1
API_TITLE=Anxiety Framework API
API_DESCRIPTION=Simple Backend Framework for Node.js
API_CONTACT_EMAIL=admin@anxiety-framework.com

# Request/Response settings
REQUEST_TIMEOUT=30000
RESPONSE_COMPRESSION=true

# ================================
# DEVELOPMENT TOOLS
# ================================
# Hot reload settings
HOT_RELOAD=true
WATCH_EXTENSIONS=.ts,.js,.json

# Debug settings
DEBUG_ENABLED=false
DEBUG_NAMESPACE=anxiety:*

# ================================
# TEST CONFIGURATION
# ================================
# Test database (separate from main DB)
TEST_DB_TYPE=postgres
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_USERNAME=postgres
TEST_DB_PASSWORD=postgres
TEST_DB_DATABASE=anxiety_db_test
TEST_TIMEOUT=30000

# ================================
# MONITORING & HEALTH CHECKS
# ================================
# Health check endpoints
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENABLED=false
METRICS_ENDPOINT=/metrics

# ================================
# FILE UPLOAD CONFIGURATION
# ================================
# File upload settings (for future use)
UPLOAD_MAX_FILE_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DESTINATION=./uploads

# ================================
# EMAIL CONFIGURATION
# ================================
# Email settings (for future use)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@anxiety-framework.com

# ================================
# EXTERNAL SERVICES
# ================================
# Third-party API keys (for future integrations)
API_KEY_EXTERNAL_SERVICE=
WEBHOOK_SECRET=

# ================================
# CUSTOM APPLICATION SETTINGS
# ================================
# Add your custom environment variables below
# CUSTOM_SETTING=value