# ================================
# ANXIETY-JS FRAMEWORK CONFIGURATION EXAMPLE
# ================================
# Copy this file to .env and update the values as needed

# ================================
# APPLICATION SETTINGS (REQUIRED)
# ================================
NODE_ENV=development
PORT=3001
GLOBAL_PREFIX=/api

# Framework Information
FRAMEWORK_NAME=Anxiety Framework
FRAMEWORK_VERSION=1.0.0

# ================================
# SERVER CONFIGURATION
# ================================
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization

BODY_PARSER_ENABLED=true
BODY_PARSER_LIMIT=10mb
BODY_PARSER_EXTENDED=true

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_LEVEL=info
LOG_ENABLED=true
LOG_COLORIZE=true
LOG_TIMESTAMPS=true
SUPPRESS_LOGS_IN_TEST=true

# ================================
# SECURITY CONFIGURATION
# ================================
# IMPORTANT: Change these values in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_ALGORITHM=HS256
JWT_ISSUER=anxiety-framework
JWT_AUDIENCE=anxiety-framework-users

API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

HELMET_ENABLED=true

# ================================
# DATABASE CONFIGURATION (OPTIONAL)
# ================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=anxiety_user
DB_PASSWORD=anxiety_password
DB_NAME=anxiety_framework
DB_SSL=false
DB_POOL_SIZE=10
DB_TIMEOUT=30000

# ================================
# CACHE CONFIGURATION (OPTIONAL)
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# ================================
# API CONFIGURATION
# ================================
API_VERSION=v1
API_TITLE=Anxiety Framework API
API_DESCRIPTION=Simple Backend Framework for Node.js
API_CONTACT_EMAIL=admin@anxiety-framework.com

REQUEST_TIMEOUT=30000
RESPONSE_COMPRESSION=true

# ================================
# DEVELOPMENT TOOLS
# ================================
HOT_RELOAD=true
WATCH_EXTENSIONS=.ts,.js,.json
DEBUG_ENABLED=false
DEBUG_NAMESPACE=anxiety:*

# ================================
# TEST CONFIGURATION
# ================================
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=anxiety_framework_test
TEST_TIMEOUT=30000

# ================================
# MONITORING & HEALTH CHECKS
# ================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENABLED=false
METRICS_ENDPOINT=/metrics

# ================================
# FILE UPLOAD CONFIGURATION (OPTIONAL)
# ================================
UPLOAD_MAX_FILE_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DESTINATION=./uploads

# ================================
# EMAIL CONFIGURATION (OPTIONAL)
# ================================
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@anxiety-framework.com

# ================================
# EXTERNAL SERVICES (OPTIONAL)
# ================================
API_KEY_EXTERNAL_SERVICE=
WEBHOOK_SECRET=

# ================================
# CUSTOM APPLICATION SETTINGS
# ================================
# Add your custom environment variables below
# CUSTOM_SETTING=value"